<a href='/'>Home</a> <%= @project.name%> 
<div id='project_<%= @project.guid %>'>Loading...</ul>
<script>
  $.get('<%= @project.url %>/update')
  $('#project_<%= @project.guid %>').load('<%= @project.url %>/to_html_table', function() {
    // Create useful links
    $("td:contains('cenario'),td:contains('teps')").wrapInner("<a href='<%= @project.url %>/features'/>")
    $("td:contains('github.com')").wrapInner("<a href='<%= @project.github_url%>'/>")
    $("td:contains('Current branch')").append(" <small>(<a onClick='linkify_branch_name()' href='#'>Change</a></small>)")

  });

  function linkify_branch_name(){
    available_branches_element = $("td:contains('Available branches')").next();
    current_branch = $("td:contains('Current branch')").next().text();
    branches = available_branches_element.text().split(", ");

    linked_branch_list = ""
    for(i=0;i<branches.length;i++){
      if (branches[i] == current_branch){
        linked_branch_list += branches[i];
      }
      else{
        linked_branch_list += "<a href='<%= @project.url %>/checkout/"+ branches[i] +"'>"+ branches[i] +"</a>"
      }
    }
    available_branches_element.text(linked_branch_list);
  }
</script>
